    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scan": "^0.4.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.1.5",
    "@eslint/css": "^0.10.0",
