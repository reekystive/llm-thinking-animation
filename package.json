    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "vitest run --update",
    "test:watch": "vitest --watch",
    "predeploy": "pnpm run build",
    "deploy": "tsx scripts/gh-pages-deploy.mts"
  },
  "dependencies": {
